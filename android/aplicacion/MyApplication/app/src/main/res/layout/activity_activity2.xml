<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.kevin.myapplication.Activity2">



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/boton_con_foco" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reproducir sonido"
        android:id="@+id/btnSonido"
        android:layout_alignTop="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DetenerAudio"
        android:id="@+id/btnDetenerAudio"
        android:layout_below="@+id/btnSonido"
        android:layout_alignLeft="@+id/btnSonido"
        android:layout_alignStart="@+id/btnSonido" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abrir archivo"
        android:id="@+id/btnAbrir"
        android:layout_below="@+id/btnDetenerAudio"
        android:layout_alignLeft="@+id/btnDetenerAudio"
        android:layout_alignStart="@+id/btnDetenerAudio" />
</RelativeLayout>
